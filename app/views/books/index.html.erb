<p id="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<h1>My Book Collection</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Price</th>
      <th>Published Date</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.price %></td>
        <td><%= book.published_date %></td>
        <td><%= button_to('Show Book Details', book_path(book), method: :get) %></td>
        <td><%= button_to('Edit Book', edit_book_path(book), method: :get) %></td>
        <td><%= button_to('Delete Book', delete_book_path(book), method: :get) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to('Add New Book', new_book_path, method: :get, class: "addBookButton") %>
